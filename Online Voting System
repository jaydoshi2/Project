// THIS IS THIRD JAVA FILE TO SELECT THE FAVROUITE TEACHER
package PROJECT;
import java.util.*;
public class File3_Displaying_Teachers_List 
{
    public static void main(String[] args) 
    {
        Scanner sc = new Scanner(System.in);
        System.out.println("||============================================||");
        System.out.println("||   SELECT YOUR FAVROUTIE TEACHER'S SUBJECT!.||");
        System.out.println("||     (GUYS, DON'T FORGET THE ES, LOL!)      ||");
        System.out.println("||============================================||");
        System.out.printf("%20s"," ");
        String subject_name = sc.nextLine();
        if(subject_name.equalsIgnoreCase("java"))
        {
            System.out.println("||============================================||");
            System.out.println("||        THE LIST OF JAVA TEACHERS           ||");
