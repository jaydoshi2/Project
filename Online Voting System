// THIS IS 2ND JAVA FILE TO STORE THE DATA OF STUDENTS 
package PROJECT;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class File2_storing_in_file {
    public static void main(String[] args) {
        if(args[0]=="A"&&args[1]=="1")
        {
            Scanner sc = new Scanner(System.in);
            int i = 1;
            System.out.printf("            Enter number of students %14s"," \n");
            System.out.printf("%22s"," ");
            int n = sc.nextInt();
            sc.nextLine();  
            try {
                FileWriter writer = new FileWriter("1A.txt", true);
                boolean addMore = true;
                while (addMore) {
                    System.out.println("            Enter name of student : "+(i));
                    System.out.printf("   %15s","");
                    String name = sc.nextLine();
                    System.out.printf("         Enter roll number of student: %d %6s",(i),"  \n");
                    System.out.printf("  %20s"," ");
                    int roll = sc.nextInt();
                    sc.nextLine(); // Consume the newline character left by nextInt()
                    writer.write(name + ","  + roll + "\n");
                    String[] number = new String[1];
                    number[0] = Integer.toString(i);
                    File3_Displaying_Teachers_List.main(number);

                    System.out.println("||============================================||");
                    System.out.println("||             THANKS FOR VOTING!             ||");
                    System.out.println("||============================================||");
                    if (i==n) {
                        addMore = false;
                    }
                    ++i;
                }
                writer.close();
            } catch (IOException e) {
                System.out.println("An error occurred while writing to the file.");
                e.printStackTrace();
            }
        }
        // this is to call 2A Batch
        if(args[0]=="A"&&args[1]=="2")
        {
            Scanner sc = new Scanner(System.in);
            int i = 1;
            System.out.printf("            Enter number of students %14s"," \n");
