package PROJECT;
// THIS IS JAVA FILE 1 TO INPUT THE CALSS 
import java.util.*;
public class File1_Choose_class 
{
    public static void main(String args[])
    {
        String class_division;
        System.out.println("||==========================================||");
        System.out.println("||         WELCOME TO LJ VOTING CENTER      || ");
        System.out.println("||==========================================||");
        Students_of_CEIT s = new Students_of_CEIT();
        Scanner sc = new Scanner(System.in);
        System.out.printf("    ENTER YOUR CLASS NUMBER(1/2/3/4/5/6) %3s \n"," ");
        System.out.printf("%23s"," ");
        int class_number = sc.nextInt();
        sc.nextLine();
        System.out.printf("       Enter your class division(A/B) %8s","   \n");
        System.out.printf("%23s"," ");
        class_division = sc.nextLine();
        if(class_division.equalsIgnoreCase("A")&&class_number==1)
        {
            s.new A1();
        }
        if(class_division.equalsIgnoreCase("A")&&class_number==2)
        {
            s.new A2();
        }
        if(class_division.equalsIgnoreCase("A")&&class_number==3)
        {
            s.new A3();
        }
        if(class_division.equalsIgnoreCase("A")&&class_number==4)
        {
            s.new A4();
        }
        if(class_division.equalsIgnoreCase("A")&&class_number==5)
        {
            s.new A5();
        }
        if(class_division.equalsIgnoreCase("A")&&class_number==6)
        {
            s.new A6();
        }
        if(class_division.equalsIgnoreCase("B")&&class_number==1)
        {
            s.new B1();
        }
        if(class_division.equalsIgnoreCase("B")&&class_number==2)
        {
            s.new B2();
        }
        if(class_division.equalsIgnoreCase("B")&&class_number==3)
        {
            s.new B3();
        }
        if(class_division.equalsIgnoreCase("B")&&class_number==4)
        {
            s.new B4();
        }
        if(class_division.equalsIgnoreCase("B")&&class_number==5)
        {
            s.new B5();
        }
        if(class_division.equalsIgnoreCase("B")&&class_number==6)
        {
            s.new B6();
        }
        sc.close();
    }
}
class Students_of_CEIT
{
    class A1
