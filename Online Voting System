// THIS IS 4TH AND THE LAST FILE TO STORE THE VOTE FOR ALL STUDENTS
package PROJECT;
import java.io.*;
import java.util.*;
public class File4_Voting_Teacher 
{
        public static void main(String[] args) 
    {
        Teachers_List t = new Teachers_List();
        Teachers_List.Java J = t.new Java();
        Teachers_List.Maths M = t.new Maths();
        Teachers_List.Physics P = t.new Physics();
        Teachers_List.ES E = t.new ES();
        Teachers_List.SE S  = t.new SE();
        Scanner sc = new Scanner(System.in);
        System.out.println("||============================================||");
            System.out.println("||ENTER THE SORTNAME OF YOUR FAVROUITE TEACHER||");
            System.out.printf("%21s"," ");
            String teacher_name = sc.nextLine();
            if(teacher_name.equalsIgnoreCase("KDL"))
            {
                J.new Komal_langalia();
            }
            if(teacher_name.equalsIgnoreCase("UTJ"))
            {
                J.new Uma_joshi();
            }
            if(teacher_name.equalsIgnoreCase("MDP"))
            {
                J.new Milan_patel();
            }
            if(teacher_name.equalsIgnoreCase("ARP"))
            {
                J.new Ankur_patel();
            }
            if(teacher_name.equalsIgnoreCase("JIS"))
            {
                J.new Jenish_shah();
            }
            if(teacher_name.equalsIgnoreCase("JAZ"))
            {
                J.new Jinal_zala();
            }
            if(teacher_name.equalsIgnoreCase("DAM"))
            {
                M.new Dinesh_Mehbubani();
            }
            if(teacher_name.equalsIgnoreCase("HRS"))
            {
                M.new Hena_shah();
            }
            if(teacher_name.equalsIgnoreCase("HAM"))
            {
                M.new Hitesh_manglani();
            }     
            if(teacher_name.equalsIgnoreCase("PKS"))
            {
                M.new Krunal_patel();
            }
            if(teacher_name.equalsIgnoreCase("ARY"))
            {
                E.new Akhilesh_yadav();
            }
            if(teacher_name.equalsIgnoreCase("NRS"))
            {
                P.new Nikunj_Singhala();
            }
            if(teacher_name.equalsIgnoreCase("SVC"))
            {
                P.new Sagar_choksi();
            }
            if(teacher_name.equalsIgnoreCase("NAM"))
            {
                P.new Nirav_Mehta();
            }
            if(teacher_name.equalsIgnoreCase("NSD"))
            {
                P.new Nimis_Das();
            }
            if(teacher_name.equalsIgnoreCase("PDR"))
            {
                S.new Diptesh_patel();
            }
            if(teacher_name.equalsIgnoreCase("KCS"))
            {
                S.new Khusboo_Shah();
            }
            if(teacher_name.equalsIgnoreCase("NRM"))
            {
                S.new Nidhi_Mehta();
        }
    }    
}
class Teachers_List
{
    class Java
    {
        class Komal_langalia
        {
            public Komal_langalia() 
            {
                File file = new File("komal_langalia_votes.txt");
                int komal_langalia_votes;
                if(!file.exists())// to create the ifle if file does not exist
                {
                    try {
                        file.createNewFile();
                        FileWriter writer = new FileWriter(file);
                        writer.write("0");
                        writer.close();
                    } catch (Exception e) 
                    {
                        e.printStackTrace();
                    }
                }
                try {
                    BufferedReader reader = new BufferedReader(new FileReader(file));
                    komal_langalia_votes = Integer.parseInt(reader.readLine()); 
                    reader.close();
                } catch (Exception e) {
                    e.printStackTrace();
                    komal_langalia_votes = 0;
                }
                // to incerment the votes
                komal_langalia_votes++;    
                try {
                    FileWriter writer = new FileWriter(file);
                    writer.write(Integer.toString(komal_langalia_votes));
                    writer.close();
                } catch (Exception e) {
                    e.printStackTrace();
                }                
            }
        }
